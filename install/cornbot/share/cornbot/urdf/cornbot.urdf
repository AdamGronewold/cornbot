<?xml version="1.0"?>
<robot name="cornbot">
  
  <!-- Map link -->
  <link name="world"/>

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.508 0.3192 0.277"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 0.5"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.508 0.3192 0.277"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="9.7"/>
      <inertia ixx="0.1" ixy="0" ixz="0.1" iyy="0.1" iyz="0.1" izz="0.1"/>
    </inertial>
  </link>
  
  <link name="odom">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
  </link>
  

  <!-- Joint between odom and base_link (static) -->
  <joint name="world_to_odom" type="fixed">
    <parent link="world"/>
    <child link="odom"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
  
    <!-- Joint between odom and base_link (static) -->
  <joint name="odom_to_base_link" type="fixed">
    <parent link="odom"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.1885" rpy="0 0 0"/>
  </joint>
  
  <!-- Front Left Wheel -->
  <link name="front_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.105"/>
      </geometry>
      <material>
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.134 0.1905 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Front Right Wheel -->
  <link name="front_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.105"/>
      </geometry>
      <material>
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.134 -0.1905 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Rear Left Wheel -->
  <link name="rear_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.105"/>
      </geometry>
      <material>
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.134 0.1905 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Rear Right Wheel -->
  <link name="rear_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.105"/>
      </geometry>
      <material>
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.134 -0.1905 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>

